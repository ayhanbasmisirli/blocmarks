<h1>New Bookmark</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_for @bookmark do |f| %>
      <div class="form-group">
        <%= f.text_field :title, class: 'form-control', placeholder: "Add topic for bookmark" %>
        <%= f.text_field :topic_list, class: 'form-control', placeholder: "Enter Bookmark" %>
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
      
    <% end %>
  </div>
</div>